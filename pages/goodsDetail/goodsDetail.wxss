.intro .body, .stores, .shoplist {
  display: flex;
  justify-content: space-between;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.intro {
  background-color: #fff;
  border-bottom: 1rpx solid #E5E5E5;
  margin-bottom: 20rpx;
}

.intro .name {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  padding: 24rpx 30rpx;
}

.intro .body {
  padding: 0 30rpx 18rpx;
  align-items: baseline;
}

.intro .body .price {
  font-size: 50rpx;
}

.intro .body .price text {
  font-size: 32rpx;
}

.intro .body .number {
  font-weight: 300;
  font-size: 28rpx;
  color: #8A8C92;
}

.intro .body .number text, .intro .body .number image {
  vertical-align: middle;
}

.intro .body .number .sale-number {
  padding-right: 20rpx;
  border-right: 2rpx solid #e5e5e5;
}

.intro .body .number image {
  width: 32rpx;
  height: 22rpx;
  margin-right: 10rpx;
  margin-left: 20rpx;
}

.intro .footer {
  font-size: 28rpx;
  font-weight: 300;
  color: #8A8C92;
  border-top: 1rpx solid #E5E5E5;
  padding: 24rpx 0 30rpx;
  margin: 0 30rpx;
}

.intro .footer > text {
  display: block;
  position: relative;
  padding-left: 30rpx;
  margin-bottom: 10rpx;
}

.intro .dot {
  position: absolute;
  left: 0;
  top: 14rpx;
  width: 14rpx;
  height: 14rpx;
  border-radius: 100%;
  background-color: #FFC121;
}

.outer {
  border-top: 1rpx solid #E5E5E5;
  border-bottom: 1rpx solid #E5E5E5;
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.stores .shopicon {
  width: 84rpx;
  height: 84rpx;
  border-radius: 100%;
  margin-right: 20rpx;
}

.stores view {
  flex: 1;
  color: #606470;
}

.stores view .shopname {
  display: block;
  margin-bottom: 15rpx;
  line-height: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #2F323A;
}

.stores view .mark {
  width: 18rpx;
  height: 22rpx;
  vertical-align: baseline;
  margin-right: 8rpx;
}

.stores .mobile {
  width: 30rpx;
  height: 40rpx;
  align-self: center;
  margin-left: 60rpx;
}

.shoplist {
  margin-top: 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #E5E5E5;
  align-items: center;
  padding-top: 28rpx;
}

.shoplist .shopicon {
  width: 36rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.shoplist text {
  flex: 1;
  font-size: 28rpx;
  color: #606470;
}

.shoplist .arrow {
  width: 16rpx;
  height: 24rpx;
}

.detail {
  background-color: #fff;
}

.detail .title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 3;
  border-bottom: 1rpx solid #E5E5E5;
  margin-left: 30rpx;
}

.detail .content {
  padding: 0 30rpx 30rpx;
}

.detail .p {
  display: block;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #606470;
}

.detail image {
  width: 100%;
  vertical-align: bottom;
}

.buyBtn {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-weight: 300;
  background-color: #FF8100;
  color: #fff;
  border-radius: 0;
}
