.goods, .goods .content, .items .item, .items .count {
  display: flex;
  justify-content: space-between;
}

.goods {
  border-top: 1rpx solid #e5e5e5;
  margin-top: 20rpx;
  padding: 30rpx;
  background-color: #fff;
}

.goods image {
  width: 216rpx;
  height: 144rpx;
  margin-right: 20rpx;
}

.goods .content {
  flex: 1;
  flex-direction: column;
}

.goods .name {
  font-size: 32rpx;
  font-weight: bold;
}

.goods .price {
  line-height: 1;
}

.items {
  border-bottom: 1rpx solid #e5e5e5;
  background-color: #fff;
  font-size: 28rpx;
  padding: 0 30rpx;
}

.items .item {
  height: 100rpx;
  align-items: center;
  border-top: 1rpx solid #e5e5e5;
}

.items label {
  color: #2F323A;
}

.items input {
  text-align: right;
}

.items .count {
  align-items: center;
}

.items .count input, .items .count button {
  display: inline-block;
}

.items .count input {
  width: 94rpx;
  text-align: center;
}

.items .count button {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 5rpx;
  padding: 0;
  margin: 0;
  background-color: #E5E5E5;
}

.items .count button image {
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
}

.items .count button .reduce {
  height: 4rpx;
}

.items .count button.button-hover {
  background-color: #ccc;
}

.buyBtn {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-weight: 300;
  background-color: #FF8100;
  color: #fff;
  border-radius: 0;
}
